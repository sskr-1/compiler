// Variable declarations and assignments in C-like language
int main() {
    // Different data types
    int integer_var = 100;
    float float_var = 3.14159;
    char char_var = 'A';
    bool bool_var = true;
    
    // Variable assignments
    integer_var = 200;
    float_var = 2.71828;
    char_var = 'B';
    bool_var = false;
    
    // Increment and decrement
    integer_var++;
    integer_var--;
    ++integer_var;
    --integer_var;
    
    // Compound assignments
    integer_var += 10;
    integer_var -= 5;
    integer_var *= 2;
    integer_var /= 4;
    
    return integer_var;
}